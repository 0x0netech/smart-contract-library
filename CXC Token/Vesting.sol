// ERC20 Token contract interface

interface Token {
    function transfer(address to, uint256 amount) external returns (bool);

    function transferFrom(
        address from,
        address to,
        uint256 amount
    ) external returns (bool);

    function balanceOf(address to) external returns (uint256);
}


contract Vesting is Ownable {
    using SafeMath for uint256;

    struct _withdrawdetails {
        uint256 time;
        uint256 amount;
    }

    mapping(address => bool) private lockingWallet;
    mapping(address => uint256) public lockingWalletAmt;
    mapping(address => uint256) public VestingTime;
    mapping(address => uint256) public unlockDate;
    mapping(address => mapping(uint256 => _withdrawdetails)) public withdrawdetails;

    uint256 public deployTimestamp;
    address public tokenContract = address(0);
    uint256 public quarterly = (31 * 3 * (24 * 60 * 60));

    event withdraw(address _to, uint256 _amount);


    function getYear(uint256 _timeStemp) internal pure returns (uint256 year) {
        year = DateTime.getYear(_timeStemp);
    }

    function timestampFromDateTime(uint256 _timeStemp)
        internal
        pure
        returns (uint256 timestamp)
    {
        uint256 year = getYear(_timeStemp);
        return DateTime.timestampFromDateTime(year, 3, 1, 0, 0, 0);
    }

    constructor(address _tokenContract) {
        tokenContract = _tokenContract;
        deployTimestamp = block.timestamp;
    }

    function AddVestingDetails(
        address _vestingWallet,
        uint256 _tokenamount,
        uint256 _vestingTime
    ) public onlyOwner returns (bool) {

        require(!lockingWallet[_vestingWallet], "Wallet already exist");

        lockingWallet[_vestingWallet] = true;
        lockingWalletAmt[_vestingWallet] = (_tokenamount * 80) / 100;
        VestingTime[_vestingWallet] = (_vestingTime * 12) / 3;
        unlockDate[_vestingWallet] = deployTimestamp + (_vestingTime * (365 * (24 * 60 * 60)));

        Token(tokenContract).transfer(_vestingWallet, (_tokenamount * 20) / 100);

        return lockingWallet[_vestingWallet];
    }


    function CompletedVestingYear(address user) public view returns (uint256) {
        return (
            VestingTime[user].div(4).sub(getYear(unlockDate[user]).sub(getYear(block.timestamp))
            )
        );
    }

    function ViewVestingAmount(address user) public view returns (uint256) {
        uint256 tempVer = 0;
        for (uint256 i = 1; i <= VestingTime[user]; i++) {

            if (block.timestamp >= deployTimestamp + (quarterly * i)) {
                if (withdrawdetails[user][i].time == 0) {
                    tempVer += lockingWalletAmt[user] / VestingTime[user];
                }
            } else {
                break;
            }
        }
        return tempVer;
    }

    function withdrawTokens() public returns (bool) {
        require(lockingWalletAmt[msg.sender] > 0, "Wallet Address does not Exist");

        uint256 tempVer = 0;
        for (uint256 i = 1; i <= VestingTime[msg.sender]; i++) {

            require(deployTimestamp + quarterly <= block.timestamp,"Unable to Withdraw");

            if (block.timestamp >= deployTimestamp + (quarterly * i)) {
                if (withdrawdetails[msg.sender][i].time == 0) {
                    tempVer +=
                        lockingWalletAmt[msg.sender] /
                        VestingTime[msg.sender];
                    withdrawdetails[msg.sender][i] = _withdrawdetails(
                        block.timestamp,
                        lockingWalletAmt[msg.sender] / VestingTime[msg.sender]
                    );
                }
            } else {
                break;
            }
        }

        Token(tokenContract).transfer(msg.sender, tempVer);

        emit withdraw(msg.sender, tempVer);
        return true;
    }
}
